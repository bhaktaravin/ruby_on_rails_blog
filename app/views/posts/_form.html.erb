<%= form_with(model: post, local: true, class: "row g-3") do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul class="mb-0">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Enter your post title..." %>
  </div>

  <div class="col-12">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 10, placeholder: "Write your post content here..." %>
  </div>

  <div class="col-12">
    <%= form.submit class: "btn btn-primary btn-lg" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>
