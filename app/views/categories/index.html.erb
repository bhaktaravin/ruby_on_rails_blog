<% content_for :title, "Categories - My Blog" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2">Browse by Category</h1>
  <%= link_to "â† Back to Posts", posts_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to category.name, category_path(category), class: "text-decoration-none" %>
          </h5>
          <% if category.description.present? %>
            <p class="card-text text-muted">
              <%= category.description %>
            </p>
          <% end %>
          <p class="card-text">
            <small class="text-muted">
              <%= pluralize(category.posts_count, 'post') %>
            </small>
          </p>
        </div>
        <div class="card-footer bg-transparent">
          <%= link_to "View Posts", category_path(category), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @categories.empty? %>
  <div class="text-center py-5">
    <h3>No categories yet!</h3>
    <p class="text-muted">Categories will appear here as you add them to your posts.</p>
    <%= link_to "Write Your First Post", new_post_path, class: "btn btn-primary" %>
  </div>
<% end %>
